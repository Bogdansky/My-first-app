<h1>Редактирование задачи</h1>
  
<%= form_for @user do |f| %>
  
  <p>
    <%= f.label :title, "Название" %><br>
    <%= f.text_field :login %>
  </p>
  
  <p>
    <%= f.label :text, "Пароль" %><br>
    <%= f.text_area :password %>
  </p>
  
  <p>
    <%= f.submit "Сохранить" %>
  </p>
  
<% end %>
  
<%= link_to 'Назад', root_path %>